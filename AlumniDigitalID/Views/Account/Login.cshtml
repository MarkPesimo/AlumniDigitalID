
@model ZMGModel.ViewModel.ALUMNI.Alumni_Model.User_model.Login_model

@{
    ViewBag.Title = "Digital ID Authentication";
    Layout = "~/Views/Shared/Layout/_BlankLayout.cshtml";
}


@section Scripts
{
    <script src="~/Scripts/User/User.js"></script>
}


    <style>
        body {
            background-color: #edd2b7;
        }

        .login-container {
            width: 100%;
            max-width: 350px;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-control::placeholder {
            font-style: italic;
        }

        .pin-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: darkred;
            display: inline-block;
            margin: 0 6px;
        }
    </style>

<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="login-container text-center">
        @*<img src="/images/Alumni card-03 2.png" alt="Logo" height="60" class="mb-3" />*@
        <h5 class="mb-4">
            <strong><i class="bi bi-person me-2"></i>ALUMNI LOGIN</strong>
        </h5>


        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-Form" }))
        {
            @Html.HiddenFor(m => m.SchoolId)

            <div class="row" id="div-validation" style="display: none;">
                <div class="col-lg-12 mb-3">
                    <label for="html" id="error-message-label" class="form-label text-danger"></label><br>
                </div>
            </div>

            <div class="alert alert-danger d-none" id="div-validation">
                <label id="error-message-label" class="mb-0"></label>
            </div>



            <div class="form-group mt-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control bg-white", @placeholder = "Username", autocomplete = "off" })
                </div>
            </div>


            <div class="form-group mt-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-key"></i>
                    </span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control bg-white", @placeholder = "Password" })

                </div>

            </div>

            <button type="submit" class="btn btn-danger w-100 mt-4" id="login-btn">Login</button>
        }

        @*<div class="mt-3">
            <a href="#" class="text-muted small">Forgot your password?</a>
        </div>*@
    </div>
</div>
 