<div class="modal fade" id="change_image_modal" tabindex="-1" aria-labelledby="changeImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm border-0">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="changeImageModalLabel">Change Profile Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body pt-0">
                <div class="text-center mb-3">
                    <img src="~/AlumniImages/@(Model.Guid).JPEG"
                         alt="Current Profile"
                         id="preview-profile-image"
                         class="rounded-circle shadow"
                         onerror="this.src='/AlumniImages/0.JPEG'"
                         style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #ddd;" />
                </div>

                <div class="custom-file-upload text-center">
                    <label for="change_profile_Attachment" class="btn btn-outline-primary px-4 py-2">
                        <i class="bi bi-upload me-2"></i> Choose Image
                    </label>
                    <input type="file" id="change_profile_Attachment" name="change_profile_Attachment" accept="image/*" hidden>
                </div>

                <!-- Progress bar -->
                <div class="progress mt-4" style="height: 6px; display: none;" id="upload-progress-container">
                    <div class="progress-bar bg-success" role="progressbar" id="upload-progress-bar" style="width: 0%;"></div>
                </div>
            </div>

            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="save-picture-button">
                    <i class="fa-regular fa-circle-check me-1"></i> Update
                </button>
            </div>
        </div>
    </div>
</div>
