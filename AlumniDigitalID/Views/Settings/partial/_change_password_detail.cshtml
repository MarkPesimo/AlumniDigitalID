@model ZMGModel.ViewModel.ALUMNI.Alumni_Model.User_model.Setting_model


@using (Html.BeginForm("Update", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", name = "change-password-form", id = "change-password-form" }))
{
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.Username)
    @Html.HiddenFor(m => m.PinNumber)
    @Html.HiddenFor(m => m.Mode)


    <div class="row" id="div-validation" style="display: none;">
        <div class="col mb-3">
            <label for="html" id="error-message-label" class="form-label text-danger"></label><br>
        </div>
    </div>



    <div class="row mt-2">
        <div class="col">
            <label for="" class="form-label">Enter your New Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control bg-white" })
        </div>
    </div>


}



