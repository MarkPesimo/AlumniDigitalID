@model ZMGModel.ViewModel.ALUMNI.Alumni_Model.User_model.Setting_model


@{
    ViewBag.Title = "Change Username";
}


@section Scripts
{
    <script src="~/Scripts/User/Pin.js"></script>
}

<style>
    body {
        background-color: #edd2b7;
    }

 
</style>


<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="text-center bg-white p-5 rounded shadow" style="width: 100%; max-width: 350px;">
        @*<img src="~/Content/images/@Model.AlumniLogo" alt="Logo" height="60" class="mb-3" />*@
        <h5><strong>Change Username</strong></h5>

  

        @using (Html.BeginForm("Update", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", name = "change-username-form", id = "change-username-form" }))
        {

            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.Password)
            @Html.HiddenFor(m => m.PinNumber)
            @Html.HiddenFor(m => m.Mode)


            <div class="row" id="div-validation" style="display: none;">
                <div class="col-lg-12 mb-3">
                    <label for="html" id="error-message-label" class="form-label text-danger"></label><br>
                </div>
            </div>

            <div class="form-group mb-2">
                @Html.ValidationMessageFor(model => model.Username, null, new { @class = "form-control-sm zips-label", @style = "color:red" })
                <div class="row">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control bg-white", @placeholder="Enter your new username" })
                    </div>
                </div>
            </div>


            <button type="submit" class="btn mt-2 w-100 btn-danger" id="save-username-button">Save</button>
        }
         
    </div>
</div>
